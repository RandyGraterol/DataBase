<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Registro de Pensum de Estudios</title>
    <link rel="stylesheet" type="text/css" href="/css/list.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script type="text/javascript" src='/js/alertConfig.js'></script>t 
</head>
<body>
    <% if(dato == 'pensum'){ %>
    <h1>PENSUM DE ESTUDIOS INGENIERIA EN INFORMATICA</h1>
    <% }else{ %>
    <h1>PRELACIONES DE LAS MATERIAS</h1>
    <% } %>
    <table>
        
        <thead>
            <% if(dato == 'pensum'){ %>
            <tr>
                <th>ID</th>
                <th>Codigo</th>
                <th>Asignatura</th>
                <th>Horas Teóricas</th>
                <th>Horas Prácticas</th>
                <th>Horas Semanales</th>
                <th>U.C</th>
                <th>Prelaciones</th>
                <th class="container-crear"><img id='crear' title="Crear Registro" src="/icon/crear.png" class="imagen-boton"></th>
            </tr>
            <% }else{ %>
            <th>ID</th>
            <th>Codigo</th>
            <th>Asignatura</th>
            <th>PensumId</th>
            <th class="container-crear"><img id='crear' title="Crear Registro" src="/icon/crear.png" class="imagen-boton"></th>
            <% } %>
        </thead>
        <tbody>
            <% data.forEach(item=>{ %>

            <% if(dato == 'pensum'){ %>
            <tr>
                <td><%=item.id%></td>
                <td><%=item.codigo%></td>
                <td><%=item.asignatura%></td>
                <td><%=item.horasTeoricas%></td>
                <td><%=item.horasPracticas%></td>
                <td><%=item.horasSemanales%></td>
                <td><%=item.uc%></td>
                <td><%=item.prelaciones%></td>
                <td class="botones">
                   <a href="/updateGetPensum/<%=item.id%>" class='updateA'><img title="Actualizar" src="/icon/update.png" class="imagen-boton"></a>
                   <img title="Eliminar" src="/icon/borrar.png" class="imagen-boton delete" data-id='<%=item.id%>'>
                </td>
            </tr>
            <% }else{ %>
                <tr>
                <td><%=item.id%></td>
                <td><%=item.codigo%></td>
                <td><%=item.asignatura%></td>
                <td><%=item.pensumId%></td>
                
                <td class="botones">
                   <img title="Actualizar" src="/icon/update.png" class="imagen-boton">
                   <img title="Eliminar" src="/icon/borrar.png" class="imagen-boton">
                </td>
            </tr>
            <% } %>

            <% }) %>
            <!-- Más filas según sea necesario -->
        </tbody>
    </table>
    <script type="text/javascript" src='/js/eventos.js'></script>
    <script type="text/javascript" src='/js/delete.js'></script>
   
</body>
</html>